{
  "manifest_version": 2,

  "name": "OLA Yes Abhi!",
  "description": "Book cabs with a few clicks",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "HOLA!!"
  },

  "content_scripts": [
    {
      "matches": ["https://www.zomato.com/*"],
      "css": [],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "48": "icon48.png"
  },

  "permissions": [
    "activeTab",
     "tabs",
    "https://ajax.googleapis.com/",
    "https://www.zomato.com/*",
    "cookies",
    "<all_urls>"
  ]
}
